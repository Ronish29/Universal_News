<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@+id/background_item">
        <shape android:shape="rectangle">
            <solid android:color="#f3f3f3"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <item android:id="@+id/foreground_item" android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#9B4FE4"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

</layer-list>
